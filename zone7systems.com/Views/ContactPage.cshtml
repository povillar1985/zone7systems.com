@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var homePage = Model.Content.Parent;
}
<!-- Page Content -->
<div class="container">
    <!-- Image Header -->
    @Html.Partial("./Layouts/_PageBanner")
    @*<img class="img-fluid rounded mb-4" src="http://placehold.it/1200x300" alt="">*@
    @*<h1 class="mt-4 mb-3">
            Contact
            <small>Subheading</small>
        </h1>*@
    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="@homePage.GetPropertyValue("googleMapLink")"></iframe>
        </div>
        <div class="col-lg-4 mb-4">
            <h3>Contact Details</h3>
            <br />
            <p>
                @homePage.GetPropertyValue("address1")
                <br>
                @homePage.GetPropertyValue("address2")
                <br>
            </p>
            <p>
                <abbr title="Phone">P</abbr>: @homePage.GetPropertyValue("phone")
            </p>
            <p>
                <abbr title="Fax">F</abbr>: @homePage.GetPropertyValue("fax")
            </p>
            <p>
                <abbr title="Email">E</abbr>:
                <a href="mailto:@(homePage.GetPropertyValue("email"))">
                    @homePage.GetPropertyValue("email")
                </a>
            </p>
            <p>
                <abbr title="Hours">H</abbr>: @homePage.GetPropertyValue("workHours")
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 mb-4">
            @Html.Partial("./Layouts/_SocialShareLinks")
        </div>
    </div>
    <!-- /.row -->
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <hr />
    <div class="row">
        <div class="col-xl-12 mb-4 text-center">
            <h3>Send us a Message</h3>
            @Html.Action("Index", "ContactSurface")
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
